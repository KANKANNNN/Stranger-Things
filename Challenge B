# Welcome to Sonic Pi
#snare two times
live_loop :snare do
  12.times do
    sample :drum_snare_soft
    sleep 2
  end
  stop
end

#kick four times
live_loop :kick do
  16.times do
    sample :drum_heavy_kick, amp: 2
    sleep 1
  end
  stop
end

#cymbal eight times
live_loop :closed do
  16.times do
    sample :drum_cymbal_closed
    sleep 0.5
  end
  stop
end

sleep 24

#ALL TOGETHER NOW

live_loop :closed do
  16.times do
    sample :drum_cymbal_hard
    sleep 0.5
  end
  stop
end

live_loop :snare do
  4.times do
    sample :drum_splash_hard
    sleep 2
  end
  stop
end

sleep 8

live_loop :snare2 do
  sample :drum_snare_soft
  sleep 2
end

live_loop :kick2 do
  sample :drum_heavy_kick, amp: 2
  sleep 1
end

live_loop :cymbal do
  sample :drum_cymbal_closed
  sleep 0.5
end# Welcome to Sonic Pi
